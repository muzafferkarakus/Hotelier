@model List<ApiMovieViewModel>


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Film Adı</th>
            <th>Puanı</th>
            <th>Fragman</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.rank</th>
                <td><img src="@item.image" witdh="50px"/></td>
                <td>@item.title</td>
                <td>@item.rating</td>
                <td><a href="#" class="btn btn-dark">Fragmanı Oynat</a></td>
            </tr>
        }
    </table>
</div>
