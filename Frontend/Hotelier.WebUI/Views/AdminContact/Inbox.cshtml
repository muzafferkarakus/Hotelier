@model List<ResultContactDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="email-left-box">
    <a href="/AdminContact/CreateSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj</a>
    <div class="mail-list mt-4">
        <a href="/AdminContact/Inbox/" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen Kutusu</b><span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.contactCount</span> </a>
        <a href="/AdminContact/Senbox/" class="list-group-item border-0 text-success p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Gönderilenler <span class="badge badge-danger badge-sm float-right m-t-5">@ViewBag.sendMessageCount</span></a>
        <a href="/AdminContact/Important/" class="list-group-item border-0 p-r-0"><i class="fa fa-star-o font-18 align-middle mr-2"></i>Önemli </a>
        <a href="/AdminContact/Draft/" class="list-group-item border-0 p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslak</a>
        <a href="/AdminContact/Trash/" class="list-group-item border-0 p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i>Silinmiş Mesajlar</a>
    </div>
    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("/Views/AdminContact/SidebarAdminContactCategoryPartial.cshtml")
</div>
<div class="email-right-box">
    <div class="email-list m-t-15">
        @foreach (var item in Model)
        {
            <div class="message unread">
                <a href="/AdminContact/MessageDetailsByInbox/@item.ContactId">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk2">
                            <label class="toggle" for="chk2"></label>
                        </div><span class="star-toggle ti-star"></span>
                    </div>
                    <div class="col-mail col-mail-2">
                        <div class="subject">@item.Subject</div>
                        <div class="date">@item.CreateDate.ToShortDateString()</div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>