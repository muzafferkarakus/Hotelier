@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<form method="post">
    <label>Misafir Adı</label>
    <input type="hidden" asp-for="BookingId" />
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>E-Posta</label>
    <input type="text" class="form-control" asp-for="Mail" />
    <br />
    <label>Giriş Tarihi</label>
    <input type="date" class="form-control" asp-for="CheckIn" />
    <br />
    <label>Çıkış Tarihi</label>
    <input type="date" class="form-control" asp-for="CheckOut" />
    <br />
    <label>Yetişkin Sayısı</label>
    <input type="text" class="form-control" asp-for="AdultCount" />
    <br />
    <label>Çocuk Sayısı</label>
    <input type="text" class="form-control" asp-for="ChildCount" />
    <br />
    <label>Oda Sayısı</label>
    <input type="number" class="form-control" asp-for="RoomCount" />
    <br />
    <label>Ülke</label>
    <input type="text" class="form-control" asp-for="Country" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />
    <label>Özel Not</label>
    <textarea rows="5" class="form-control" asp-for="SpecialRequest"></textarea>
    <br />
    <label>Açıklama</label>
    <textarea rows="5" class="form-control" asp-for="Description"></textarea>
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-primary">Güncelle</button>
</form>

