@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<form method="post">
    <label>Müşteri Adı</label>
    <input type="hidden" asp-for="TestimonialId" />
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Unvan</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Açıklama</label>
    <textarea rows="5" class="form-control" asp-for="Description"></textarea>
    <br />
    <label>Görsel</label>
    <input type="text" class="form-control" asp-for="ImageUrl" />
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-primary">Güncelle</button>
</form>

