@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Hakkımda</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Müşteri Sayısı</th>
                            <th>Ekip Sayısı</th>
                            <th>Oda Sayısı</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.AboutId</th>
                                <td>@item.Title1 @item.Title2</td>
                                <td>@item.CustomerCount</td>
                                <td>@item.StaffCount</td>
                                <td>@item.RoomCount</td>
                                <td><a href="/AboutAdmin/DeleteAbout/@item.AboutId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                                <td><a href="/AboutAdmin/UpdateAbout/@item.AboutId" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

